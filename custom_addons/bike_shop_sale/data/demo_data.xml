<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Vélos à vendre -->
        <record id="product_bike_city" model="product.template">
            <field name="name">Vélo de Ville</field>
            <field name="bike_shop_type">bike</field>
            <field name="type">product</field>
            <field name="list_price">599.00</field>
        </record>

        <record id="product_bike_mtb" model="product.template">
            <field name="name">VTT Sport</field>
            <field name="bike_shop_type">bike</field>
            <field name="type">product</field>
            <field name="list_price">899.00</field>
        </record>

        <!-- Accessoires -->
        <record id="product_helmet" model="product.template">
            <field name="name">Casque</field>
            <field name="bike_shop_type">accessory</field>
            <field name="type">product</field>
            <field name="list_price">49.99</field>
        </record>

        <record id="product_lock" model="product.template">
            <field name="name">Antivol</field>
            <field name="bike_shop_type">accessory</field>
            <field name="type">product</field>
            <field name="list_price">39.99</field>
        </record>

        <!-- Pièces détachées -->
        <record id="product_tube" model="product.template">
            <field name="name">Chambre à Air</field>
            <field name="bike_shop_type">part</field>
            <field name="type">product</field>
            <field name="list_price">7.99</field>
        </record>

        <!-- Commande de vente exemple -->
        <record id="demo_sale_order" model="sale.order">
            <field name="partner_id" ref="bike_shop_rental.demo_partner_1"/>
            <field name="state">sale</field>
        </record>

        <record id="demo_sale_line_1" model="sale.order.line">
            <field name="order_id" ref="demo_sale_order"/>
            <field name="product_id" ref="product_bike_city"/>
            <field name="product_uom_qty">1</field>
        </record>

        <record id="demo_sale_line_2" model="sale.order.line">
            <field name="order_id" ref="demo_sale_order"/>
            <field name="product_id" ref="product_helmet"/>
            <field name="product_uom_qty">1</field>
        </record>
    </data>
</odoo>
