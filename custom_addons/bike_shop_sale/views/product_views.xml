<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des produits -->
    <record id="view_shop_product_tree" model="ir.ui.view">
        <field name="name">shop.product.tree</field>
        <field name="model">shop.product</field>
        <field name="arch" type="xml">
            <list string="Produits"
                  decoration-info="state=='draft'"
                  decoration-success="state=='confirmed'"
                  decoration-danger="quantity &lt; 5">
                <field name="name"/>
                <field name="product_type"/>
                <field name="price" widget="monetary"/>
                <field name="cost" widget="monetary"/>
                <field name="margin" widget="percentage"/>
                <field name="quantity"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des produits -->
    <record id="view_shop_product_form" model="ir.ui.view">
        <field name="name">shop.product.form</field>
        <field name="model">shop.product</field>
        <field name="arch" type="xml">
            <form string="Produit">
                <header>
                    <button name="action_confirm_and_return" string="Confirmer" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nom du produit..."/></h1>
                    </div>
                    <group>
                        <group string="Informations">
                            <field name="product_type" widget="selection"/>
                        </group>
                        <group string="Prix et Stock">
                            <field name="price" widget="monetary"/>
                            <field name="cost" widget="monetary"/>
                            <field name="margin" widget="percentage" readonly="1"/>
                            <field name="quantity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des produits -->
    <record id="view_shop_product_kanban" model="ir.ui.view">
        <field name="name">shop.product.kanban</field>
        <field name="model">shop.product</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="product_type"/>
                <field name="price"/>
                <field name="quantity"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="rental-kanban-card state-#{record.state.raw_value} oe_kanban_global_click">
                            <div class="rental-card-header">
                                <span class="rental-ref"><field name="name"/></span>
                                <span t-attf-class="bike-state-badge state-#{record.state.raw_value == 'confirmed' and 'available' or 'maintenance'}">
                                    <t t-if="record.state.raw_value == 'draft'">Brouillon</t>
                                    <t t-if="record.state.raw_value == 'confirmed'">Confirmé</t>
                                </span>
                            </div>
                            <div class="rental-card-body">
                                <div class="rental-info-row">
                                    <i class="fa fa-tag"/>
                                    <field name="product_type"/>
                                </div>
                                <div class="rental-info-row">
                                    <i class="fa fa-cube"/>
                                    Stock: <strong><field name="quantity"/></strong>
                                </div>
                            </div>
                            <div class="rental-card-footer">
                                <div class="rental-dates">
                                    <i class="fa fa-box"/> Produit
                                </div>
                                <div class="rental-amount">
                                    <strong><field name="price"/> €</strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action produits -->
    <record id="action_shop_product" model="ir.actions.act_window">
        <field name="name">Produits</field>
        <field name="res_model">shop.product</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('state', '=', 'confirmed')]</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>
</odoo>
