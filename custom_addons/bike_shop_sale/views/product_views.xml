<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout du champ type sur le formulaire produit -->
    <record id="view_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.bike.shop</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="bike_shop_type"/>
            </xpath>
        </field>
    </record>

    <!-- Action pour tous les produits du magasin -->
    <record id="action_product_bike_shop" model="ir.actions.act_window">
        <field name="name">Produits</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('bike_shop_type', '!=', False)]</field>
        <field name="context">{'default_detailed_type': 'product'}</field>
    </record>
</odoo>
