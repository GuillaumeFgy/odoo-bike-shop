<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des commandes -->
    <record id="view_shop_order_tree" model="ir.ui.view">
        <field name="name">shop.order.tree</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <list string="Commandes"
                  decoration-info="state=='draft'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='confirmed'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="customer_name"/>
                <field name="total"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des commandes -->
    <record id="view_shop_order_form" model="ir.ui.view">
        <field name="name">shop.order.form</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <form string="Commande">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_done" type="object" string="Terminer"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state in ['done', 'cancelled']"/>
                    <button name="action_draft" type="object" string="Remettre en brouillon"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1" placeholder="Nouveau"/></h1>
                    </div>
                    <group>
                        <group string="Client">
                            <field name="customer_name" placeholder="Nom du client..."/>
                            <field name="customer_phone" placeholder="+33612345678"/>
                            <field name="customer_email" placeholder="client@exemple.com"/>
                        </group>
                        <group string="Commande">
                            <field name="date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Produits">
                            <field name="line_ids">
                                <list string="Lignes de commande" editable="bottom">
                                    <field name="product_id" domain="[('state', '=', 'confirmed')]" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="subtotal" widget="monetary"/>
                                </list>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes additionnelles..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des commandes -->
    <record id="view_shop_order_kanban" model="ir.ui.view">
        <field name="name">shop.order.kanban</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="date"/>
                <field name="total"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="rental-kanban-card state-#{record.state.raw_value} oe_kanban_global_click">
                            <div class="rental-card-header">
                                <span class="rental-ref"><field name="name"/></span>
                                <span t-attf-class="bike-state-badge state-#{record.state.raw_value == 'done' and 'available' or record.state.raw_value == 'confirmed' and 'rented' or 'maintenance'}">
                                    <t t-if="record.state.raw_value == 'draft'">Brouillon</t>
                                    <t t-if="record.state.raw_value == 'confirmed'">Confirmé</t>
                                    <t t-if="record.state.raw_value == 'done'">Terminé</t>
                                    <t t-if="record.state.raw_value == 'cancelled'">Annulé</t>
                                </span>
                            </div>
                            <div class="rental-card-body">
                                <div class="rental-info-row">
                                    <i class="fa fa-user"/>
                                    <strong><field name="customer_name"/></strong>
                                </div>
                                <div class="rental-info-row">
                                    <i class="fa fa-calendar"/>
                                    <field name="date"/>
                                </div>
                            </div>
                            <div class="rental-card-footer">
                                <div class="rental-dates">
                                    <i class="fa fa-shopping-cart"/> Commande
                                </div>
                                <div class="rental-amount">
                                    <strong><field name="total"/> €</strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_shop_order_calendar" model="ir.ui.view">
        <field name="name">shop.order.calendar</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des Commandes" date_start="date" color="state">
                <field name="customer_name"/>
                <field name="total"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Graphique -->
    <record id="view_shop_order_graph" model="ir.ui.view">
        <field name="name">shop.order.graph</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <graph string="Analyse des Ventes" type="bar">
                <field name="date" interval="month"/>
                <field name="total" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vue Pivot -->
    <record id="view_shop_order_pivot" model="ir.ui.view">
        <field name="name">shop.order.pivot</field>
        <field name="model">shop.order</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des Ventes">
                <field name="date" interval="month" type="row"/>
                <field name="state" type="col"/>
                <field name="total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action commandes -->
    <record id="action_shop_order" model="ir.actions.act_window">
        <field name="name">Commandes</field>
        <field name="res_model">shop.order</field>
        <field name="view_mode">kanban,list,form,calendar</field>
    </record>

    <!-- Action rapports -->
    <record id="action_shop_order_report" model="ir.actions.act_window">
        <field name="name">Rapports de Vente</field>
        <field name="res_model">shop.order</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="domain">[('state', '!=', 'cancelled')]</field>
    </record>

    <!-- Séquence numéros de commande -->
    <record id="seq_shop_order" model="ir.sequence">
        <field name="name">Numéro de Commande Vente</field>
        <field name="code">shop.order</field>
        <field name="prefix">CMD</field>
        <field name="padding">5</field>
    </record>
</odoo>
