            <field name="monthly_rate">600.0</field>
            <field name="description">Vélos à assistance électrique pour des trajets sans effort</field>
        </record>

        <record id="category_kids" model="bike.category">
            <field name="name">Vélo Enfant</field>
            <field name="sequence">50</field>
