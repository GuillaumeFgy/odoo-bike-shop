<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Clients de démonstration -->
        <record id="demo_partner_1" model="res.partner">
            <field name="name">Jean Dupont</field>
            <field name="city">Paris</field>
            <field name="country_id" ref="base.fr"/>
            <field name="phone">+33123456789</field>
            <field name="email">jean.dupont@example.com</field>
        </record>

        <record id="demo_partner_2" model="res.partner">
            <field name="name">Marie Martin</field>
            <field name="city">Lyon</field>
            <field name="country_id" ref="base.fr"/>
            <field name="phone">+33412345678</field>
            <field name="email">marie.martin@example.com</field>
        </record>

        <record id="demo_partner_3" model="res.partner">
            <field name="name">Pierre Durant</field>
            <field name="city">Marseille</field>
            <field name="country_id" ref="base.fr"/>
            <field name="phone">+33498765432</field>
            <field name="email">pierre.durant@example.com</field>
        </record>

        <!-- Vélos de démonstration -->
        <record id="demo_bike_1" model="bike.bike">
            <field name="name">City Commuter #001</field>
            <field name="category_id" ref="category_city"/>
            <field name="model">City Commuter</field>
            <field name="year">2023</field>
            <field name="frame_size">m</field>
            <field name="color">Bleu</field>
            <field name="serial_number">CITY-001</field>
            <field name="confirmation_state">confirmed</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">available</field>
        </record>

        <record id="demo_bike_2" model="bike.bike">
            <field name="name">VTT Mountain #002</field>
            <field name="category_id" ref="category_mountain"/>
            <field name="model">Mountain X5</field>
            <field name="year">2024</field>
            <field name="frame_size">l</field>
            <field name="color">Noir</field>
            <field name="serial_number">MTB-002</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">available</field>
        </record>

        <record id="demo_bike_3" model="bike.bike">
            <field name="name">Route Pro #003</field>
            <field name="category_id" ref="category_road"/>
            <field name="model">Road Pro</field>
            <field name="year">2023</field>
            <field name="frame_size">m</field>
            <field name="color">Rouge</field>
            <field name="serial_number">ROAD-003</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">available</field>
        </record>

        <record id="demo_bike_4" model="bike.bike">
            <field name="name">E-Bike Urban #004</field>
            <field name="category_id" ref="category_electric"/>
            <field name="model">E-Bike Urban</field>
            <field name="year">2024</field>
            <field name="frame_size">m</field>
            <field name="color">Gris</field>
            <field name="serial_number">ELEC-004</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">available</field>
        </record>

        <record id="demo_bike_5" model="bike.bike">
            <field name="name">Vélo Enfant #005</field>
            <field name="category_id" ref="category_kids"/>
            <field name="model">Kids 20 pouces</field>
            <field name="year">2023</field>
            <field name="frame_size">s</field>
            <field name="color">Jaune</field>
            <field name="serial_number">KIDS-005</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">available</field>
        </record>

        <record id="demo_bike_6" model="bike.bike">
            <field name="name">VTT Rando #006</field>
            <field name="category_id" ref="category_mountain"/>
            <field name="model">Mountain Rando</field>
            <field name="year">2022</field>
            <field name="frame_size">l</field>
            <field name="color">Vert</field>
            <field name="serial_number">MTB-006</field>
            <field name="confirmation_state">confirmed</field>
            <field name="state">rented</field>
        </record>

        <!-- Contrats de location de démonstration -->
        <record id="demo_rental_1" model="rental.order">
            <field name="partner_id" ref="demo_partner_1"/>
            <field name="customer_name">Jean Dupont</field>
            <field name="bike_id" ref="demo_bike_6"/>
            <field name="start_date" eval="(datetime.now() - timedelta(days=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_date" eval="(datetime.now() + timedelta(days=5)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="rental_type">daily</field>
            <field name="state">ongoing</field>
            <field name="notes">Location en cours</field>
        </record>

        <record id="demo_rental_2" model="rental.order">
            <field name="partner_id" ref="demo_partner_2"/>
            <field name="customer_name">Marie Martin</field>
            <field name="bike_id" ref="demo_bike_2"/>
            <field name="start_date" eval="(datetime.now() + timedelta(days=7)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_date" eval="(datetime.now() + timedelta(days=9)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="rental_type">daily</field>
            <field name="state">confirmed</field>
        </record>

        <record id="demo_rental_3" model="rental.order">
            <field name="partner_id" ref="demo_partner_3"/>
            <field name="customer_name">Pierre Durant</field>
            <field name="bike_id" ref="demo_bike_1"/>
            <field name="start_date" eval="(datetime.now() - timedelta(days=10)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="end_date" eval="(datetime.now() - timedelta(days=8)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="rental_type">daily</field>
            <field name="state">done</field>
            <field name="actual_return_date" eval="(datetime.now() - timedelta(days=8)).strftime('%Y-%m-%d %H:%M:%S')"/>
        </record>
    </data>
</odoo>
