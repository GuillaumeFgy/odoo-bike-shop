<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des contrats -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <list string="Contrats de Location"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='confirmed'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='ongoing'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rental_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des contrats -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Contrat de Location">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start_rental" type="object" string="Démarrer"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_end_rental" type="object" string="Terminer"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1" placeholder="Nouveau"/></h1>
                    </div>
                    <group>
                        <group string="Client">
                            <field name="customer_name" placeholder="Nom du client..."/>
                            <field name="partner_phone" placeholder="+33612345678"/>
                            <field name="partner_email" placeholder="client@exemple.com"/>
                            <field name="partner_id" options="{'no_open': True, 'no_create': True}" placeholder="Ou sélectionner un client existant..." invisible="1"/>
                        </group>
                        <group string="Vélo">
                            <field name="bike_id" domain="[('state', '=', 'available'), ('confirmation_state', '=', 'confirmed')]" options="{'no_open': True, 'no_create': True}" placeholder="Rechercher un vélo..."/>
                            <field name="bike_category" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Période">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="actual_return_date" readonly="1" invisible="state != 'done'"/>
                        </group>
                        <group string="Tarification">
                            <field name="rental_type" widget="radio"/>
                            <label for="unit_price"/>
                            <div class="o_row">
                                <field name="unit_price" readonly="1" class="oe_inline"/>
                                <span> x </span>
                                <field name="quantity" readonly="1" class="oe_inline"/>
                            </div>
                            <field name="total_amount" readonly="1" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des contrats -->
    <record id="view_rental_order_kanban" model="ir.ui.view">
        <field name="name">rental.order.kanban</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="customer_name"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="rental_type"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="rental-kanban-card state-#{record.state.raw_value} oe_kanban_global_click">
                            <div class="rental-card-header">
                                <span class="rental-ref"><field name="name"/></span>
                                <span t-attf-class="bike-state-badge state-#{record.state.raw_value == 'available' and 'available' or record.state.raw_value == 'done' and 'available' or record.state.raw_value == 'ongoing' and 'rented' or 'maintenance'}">
                                    <t t-if="record.state.raw_value == 'draft'">Brouillon</t>
                                    <t t-if="record.state.raw_value == 'confirmed'">Confirmé</t>
                                    <t t-if="record.state.raw_value == 'ongoing'">En cours</t>
                                    <t t-if="record.state.raw_value == 'done'">Terminé</t>
                                    <t t-if="record.state.raw_value == 'cancelled'">Annulé</t>
                                </span>
                            </div>
                            <div class="rental-card-body">
                                <div class="rental-info-row">
                                    <i class="fa fa-user"/>
                                    <strong><field name="customer_name"/></strong>
                                </div>
                                <div class="rental-info-row">
                                    <i class="fa fa-bicycle"/>
                                    <field name="bike_id"/>
                                </div>
                                <div class="rental-info-row">
                                    <i class="fa fa-tag"/>
                                    <field name="rental_type"/>
                                </div>
                            </div>
                            <div class="rental-card-footer">
                                <div class="rental-dates">
                                    <i class="fa fa-calendar"/> <field name="start_date"/>
                                </div>
                                <div class="rental-amount">
                                    <field name="total_amount" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_rental_order_calendar" model="ir.ui.view">
        <field name="name">rental.order.calendar</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="start_date" date_stop="end_date" color="bike_id">
                <field name="customer_name"/>
                <field name="bike_id"/>
            </calendar>
        </field>
    </record>

    <!-- Action contrats -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Contrats de Location</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">kanban,list,form,calendar</field>
    </record>

    <!-- Séquence numéros de contrat -->
    <record id="seq_rental_order" model="ir.sequence">
        <field name="name">Numéro de Contrat</field>
        <field name="code">rental.order</field>
        <field name="prefix">LOC</field>
        <field name="padding">5</field>
    </record>
</odoo>
