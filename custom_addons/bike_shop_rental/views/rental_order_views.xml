<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les contrats de location -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <list string="Contrats de Location"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='confirmed'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='ongoing'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rental_type"/>
                <field name="total_amount"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-primary="state=='confirmed'"
                       decoration-success="state=='done'"
                       decoration-warning="state=='ongoing'"
                       decoration-muted="state=='cancelled'"/>
                <field name="invoice_status" widget="badge"
                       decoration-warning="invoice_status=='not_invoiced'"
                       decoration-success="invoice_status=='paid'"/>
            </list>
        </field>
    </record>

    <!-- Vue Form SIMPLIFIÉE pour les contrats de location -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Contrat de Location">
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirmer le Contrat"
                            class="oe_highlight"
                            invisible="state != 'draft'"
                            help="Valider le contrat de location"/>
                    <button name="action_start_rental" type="object"
                            string="Démarrer la Location"
                            class="oe_highlight"
                            invisible="state != 'confirmed'"
                            help="Le client récupère le vélo"/>
                    <button name="action_end_rental" type="object"
                            string="Terminer la Location"
                            class="oe_highlight"
                            invisible="state != 'ongoing'"
                            help="Le client rend le vélo"/>
                    <button name="action_create_invoice" type="object"
                            string="Créer la Facture"
                            class="oe_highlight"
                            invisible="state != 'done' or invoice_id"/>
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Numéro de Contrat"/>
                        <h1>
                            <field name="name" readonly="1" placeholder="Sera généré automatiquement..."/>
                        </h1>
                    </div>

                    <!-- SECTION 1 : CLIENT -->
                    <group string="INFORMATIONS CLIENT">
                        <group>
                            <field name="partner_id" 
                                   string="Client"
                                   placeholder="Sélectionnez un client..."
                                   required="1"
                                   options="{'no_create': False, 'no_open': False}"/>
                            <field name="partner_phone" string="Téléphone"/>
                            <field name="partner_email" string="Email"/>
                        </group>
                    </group>

                    <!-- SECTION 2 : VÉLO -->
                    <group string="VÉLO À LOUER">
                        <group>
                            <field name="bike_id" 
                                   string="Vélo"
                                   placeholder="Choisissez un vélo disponible..."
                                   required="1"
                                   domain="[('state', '=', 'available')]"
                                   context="{'default_state': 'available'}"/>
                            <field name="bike_category" string="Catégorie" readonly="1"/>
                        </group>
                    </group>

                    <!-- SECTION 3 : PÉRIODE -->
                    <group string="PÉRIODE DE LOCATION">
                        <group>
                            <field name="start_date" 
                                   string="Date et heure de début"
                                   required="1"/>
                            <field name="end_date" 
                                   string="Date et heure de fin"
                                   required="1"/>
                            <field name="actual_return_date" 
                                   string="Retour effectif"
                                   invisible="state != 'done'"
                                   readonly="1"/>
                        </group>
                        <group string="Durée Calculée">
                            <field name="duration_days" 
                                   string="Jours"
                                   readonly="1"/>
                            <field name="duration_hours" 
                                   string="Heures totales"
                                   readonly="1"/>
                        </group>
                    </group>

                    <!-- SECTION 4 : TARIFICATION -->
                    <group string="TARIFICATION">
                        <group>
                            <field name="rental_type" 
                                   string="Type de tarif"
                                   required="1"
                                   widget="radio"
                                   options="{'horizontal': true}"/>
                            <field name="unit_price" 
                                   string="Prix unitaire"
                                   readonly="1"/>
                            <field name="quantity" 
                                   string="Quantité"
                                   readonly="1"/>
                        </group>
                        <group>
                            <field name="subtotal" 
                                   string="Sous-total"
                                   readonly="1"/>
                            <field name="deposit_amount" 
                                   string="Caution"
                                   placeholder="Ex: 150.00"/>
                            <field name="total_amount"
                                   string="TOTAL À PAYER"
                                   readonly="1"
                                   class="oe_subtotal_footer_separator"
                                   widget="monetary"/>
                        </group>
                    </group>

                    <!-- SECTION 5 : FACTURATION -->
                    <group string="FACTURATION" invisible="state == 'draft'">
                        <group>
                            <field name="invoice_status" string="État facturation"/>
                            <field name="invoice_id" 
                                   string="Facture"
                                   invisible="not invoice_id"
                                   readonly="1"/>
                        </group>
                    </group>

                    <!-- NOTES -->
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" 
                                   placeholder="Notes concernant la location (demandes spéciales, remarques...)"/>
                        </page>
                        <page string="Rapport de Dommages" 
                              name="damage_report"
                              invisible="state not in ['done', 'cancelled']">
                            <field name="damage_report"
                                   placeholder="Rapport de dommages ou d'incidents constatés au retour du vélo..."/>
                        </page>
                    </notebook>
                </sheet>
                <!-- CHATTER masqué par défaut -->
                <div class="oe_chatter" invisible="state == 'draft'">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour les contrats de location -->
    <record id="view_rental_order_kanban" model="ir.ui.view">
        <field name="name">rental.order.kanban</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="total_amount"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-bicycle"/> <field name="bike_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> <field name="start_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong><field name="total_amount"/> €</strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendar pour les contrats de location -->
    <record id="view_rental_order_calendar" model="ir.ui.view">
        <field name="name">rental.order.calendar</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <calendar string="Planning des Locations"
                      date_start="start_date"
                      date_stop="end_date"
                      color="bike_id"
                      mode="month">
                <field name="partner_id"/>
                <field name="bike_id"/>
            </calendar>
        </field>
    </record>

    <!-- Action pour les contrats de location -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Contrats de Location</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="context">{'search_default_ongoing': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier contrat de location
            </p>
            <p>
                Gérez les locations de vélos pour vos clients.
            </p>
        </field>
    </record>

    <!-- Sequence pour les numéros de contrats -->
    <record id="seq_rental_order" model="ir.sequence">
        <field name="name">Numéro de Contrat de Location</field>
        <field name="code">rental.order</field>
        <field name="prefix">LOC</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
</odoo>
