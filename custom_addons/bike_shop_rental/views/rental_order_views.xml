<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les contrats de location -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <list string="Contrats de Location"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='confirmed'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='ongoing'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="duration_display"/>
                <field name="rental_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-primary="state=='confirmed'"
                       decoration-success="state=='done'"
                       decoration-warning="state=='ongoing'"
                       decoration-muted="state=='cancelled'"/>
                <field name="invoice_status" widget="badge"
                       decoration-muted="invoice_status=='no'"
                       decoration-warning="invoice_status=='to_invoice'"
                       decoration-info="invoice_status=='invoiced'"
                       decoration-success="invoice_status=='refunded'"/>
            </list>
        </field>
    </record>

    <!-- Vue Form CORRIG√âE pour les contrats de location -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Contrat de Location">
                <header>
                    <!-- Workflow de location -->
                    <button name="action_confirm" type="object"
                            string="Confirmer le Contrat"
                            class="oe_highlight"
                            invisible="state != 'draft'"
                            help="Valider le contrat de location"/>
                    
                    <button name="action_start_rental" type="object"
                            string="D√©marrer la Location"
                            class="oe_highlight"
                            invisible="state != 'confirmed'"
                            help="Le client r√©cup√®re le v√©lo"/>
                    
                    <button name="action_end_rental" type="object"
                            string="Terminer la Location"
                            class="oe_highlight"
                            invisible="state != 'ongoing'"
                            help="Le client rend le v√©lo"/>
                    
                    <!-- ‚úÖ CORRECTION: Facture UNIQUEMENT si termin√© -->
                    <button name="action_create_invoice" type="object"
                            string="Cr√©er Facture"
                            class="btn-primary"
                            invisible="state != 'done' or invoice_id"
                            help="Cr√©er la facture client (uniquement apr√®s retour du v√©lo)"/>
                    
                    <!-- ‚úÖ CORRECTION: Bouton pour Note de Cr√©dit (AVOIR) -->
                    <button name="action_create_credit_note" type="object"
                            string="Cr√©er Note de Cr√©dit"
                            class="btn-warning"
                            invisible="not invoice_id or credit_note_id"
                            help="√âmettre un avoir (remboursement)"/>
                    
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state not in ['draft', 'confirmed']"/>
                    
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Num√©ro de Contrat"/>
                        <h1>
                            <field name="name" readonly="1" placeholder="Sera g√©n√©r√© automatiquement..."/>
                        </h1>
                    </div>

                    <!-- SECTION 1 : CLIENT -->
                    <group string="üìã INFORMATIONS CLIENT">
                        <group>
                            <field name="partner_id" 
                                   string="Client"
                                   placeholder="S√©lectionnez un client..."
                                   required="1"
                                   options="{'no_create': False, 'no_open': False}"/>
                        </group>
                        <group>
                            <!-- ‚úÖ CORRECTION: Champs normaux (pas related) -->
                            <field name="partner_phone" 
                                   string="T√©l√©phone"
                                   placeholder="Ex: +32 123 45 67 89"/>
                            <field name="partner_email" 
                                   string="Email"
                                   placeholder="Ex: client@exemple.com"
                                   widget="email"/>
                        </group>
                    </group>

                    <!-- SECTION 2 : V√âLO -->
                    <group string="üö¥ V√âLO √Ä LOUER">
                        <group>
                            <field name="bike_id" 
                                   string="V√©lo"
                                   placeholder="Choisissez un v√©lo disponible..."
                                   required="1"
                                   domain="[('state', '=', 'available')]"
                                   context="{'default_state': 'available'}"/>
                            <field name="bike_category" 
                                   string="Cat√©gorie" 
                                   readonly="1"/>
                        </group>
                    </group>

                    <!-- SECTION 3 : P√âRIODE -->
                    <group string="üìÖ P√âRIODE DE LOCATION">
                        <group>
                            <field name="start_date" 
                                   string="Date et heure de d√©but"
                                   required="1"
                                   widget="datetime"/>
                            <field name="end_date" 
                                   string="Date et heure de fin"
                                   required="1"
                                   widget="datetime"/>
                            <field name="actual_return_date" 
                                   string="Retour effectif"
                                   invisible="state != 'done'"
                                   readonly="1"
                                   widget="datetime"/>
                        </group>
                        <group string=" Dur√©e Calcul√©e">
                            <!-- ‚úÖ CORRECTION: Affichage lisible de la dur√©e -->
                            <field name="duration_display"
                                   string="Dur√©e"
                                   readonly="1"
                                   class="fw-bold text-primary"
                                   style="font-size: 1.2em;"/>
                            <field name="duration_hours" 
                                   string="Heures totales"
                                   readonly="1"
                                   invisible="1"/>
                            <field name="duration_days" 
                                   string="Jours totaux"
                                   readonly="1"
                                   invisible="1"/>
                        </group>
                    </group>

                    <!-- SECTION 4 : TARIFICATION -->
                    <group string=" TARIFICATION">
                        <group>
                            <field name="rental_type" 
                                   string="Type de tarif"
                                   required="1"
                                   widget="radio"
                                   options="{'horizontal': true}"/>
                            <field name="unit_price" 
                                   string="Prix unitaire"
                                   readonly="1"
                                   widget="monetary"/>
                            <field name="quantity" 
                                   string="Quantit√©"
                                   readonly="1"/>
                        </group>
                        <group>
                            <field name="subtotal" 
                                   string="Sous-total"
                                   readonly="1"
                                   widget="monetary"/>
                            <field name="deposit_amount" 
                                   string="Caution"
                                   placeholder="Ex: 150.00"
                                   widget="monetary"/>
                            <field name="total_amount"
                                   string="TOTAL √Ä PAYER"
                                   readonly="1"
                                   class="oe_subtotal_footer_separator"
                                   widget="monetary"
                                   style="font-size: 1.3em; font-weight: bold;"/>
                        </group>
                    </group>

                    <!-- SECTION 5 : FACTURATION -->
                    <group string="üßæ FACTURATION" invisible="state == 'draft'">
                        <group>
                            <field name="invoice_status" 
                                   string="√âtat facturation"
                                   widget="badge"
                                   decoration-muted="invoice_status=='no'"
                                   decoration-warning="invoice_status=='to_invoice'"
                                   decoration-info="invoice_status=='invoiced'"
                                   decoration-success="invoice_status=='refunded'"/>
                        </group>
                        <group>
                            <field name="invoice_id" 
                                   string="Facture"
                                   invisible="not invoice_id"
                                   readonly="1"
                                   context="{'form_view_ref': 'account.view_move_form'}"/>
                            <field name="credit_note_id" 
                                   string="Note de cr√©dit (Avoir)"
                                   invisible="not credit_note_id"
                                   readonly="1"
                                   context="{'form_view_ref': 'account.view_move_form'}"/>
                        </group>
                    </group>

                    <!-- NOTES -->
                    <notebook>
                        <page string="üìù Notes" name="notes">
                            <field name="notes" 
                                   placeholder="Notes concernant la location (demandes sp√©ciales, remarques...)"/>
                        </page>
                        <page string="‚ö†Ô∏è Rapport de Dommages" 
                              name="damage_report"
                              invisible="state not in ['done', 'cancelled']">
                            <field name="damage_report"
                                   placeholder="Rapport de dommages ou d'incidents constat√©s au retour du v√©lo..."/>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- CHATTER -->
                <div class="oe_chatter" invisible="state == 'draft'">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour les contrats de location -->
    <record id="view_rental_order_kanban" model="ir.ui.view">
        <field name="name">rental.order.kanban</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="duration_display"/>
                <field name="total_amount"/>
                <field name="state"/>
                <field name="invoice_status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <i class="fa fa-user"/> <field name="partner_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-bicycle"/> <field name="bike_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-clock-o"/> <field name="duration_display"/>
                                    </div>
                                    <div t-if="record.invoice_status.raw_value != 'no'">
                                        <field name="invoice_status" widget="label"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong><field name="total_amount" widget="monetary"/> ‚Ç¨</strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendar pour les contrats de location -->
    <record id="view_rental_order_calendar" model="ir.ui.view">
        <field name="name">rental.order.calendar</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <calendar string="Planning des Locations"
                      date_start="start_date"
                      date_stop="end_date"
                      color="bike_id"
                      mode="month"
                      event_open_popup="true">
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="duration_display"/>
            </calendar>
        </field>
    </record>

    <!-- Filtres de recherche -->
    <record id="view_rental_order_search" model="ir.ui.view">
        <field name="name">rental.order.search</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher Locations">
                <field name="name" string="Num√©ro"/>
                <field name="partner_id" string="Client"/>
                <field name="bike_id" string="V√©lo"/>
                
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirm√©" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="En Cours" name="ongoing" domain="[('state', '=', 'ongoing')]"/>
                <filter string="Termin√©" name="done" domain="[('state', '=', 'done')]"/>
                
                <separator/>
                <filter string="√Ä Facturer" name="to_invoice" 
                        domain="[('invoice_status', '=', 'to_invoice')]"/>
                <filter string="Factur√©" name="invoiced" 
                        domain="[('invoice_status', '=', 'invoiced')]"/>
                
                <separator/>
                <filter string="Ce mois" name="this_month"
                        domain="[('start_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('start_date', '&lt;', (context_today() + relativedelta(day=1, months=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="V√©lo" name="group_bike" context="{'group_by': 'bike_id'}"/>
                    <filter string="Type de location" name="group_rental_type" context="{'group_by': 'rental_type'}"/>
                    <filter string="√âtat" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Mois de d√©but" name="group_month" context="{'group_by': 'start_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les contrats de location -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Contrats de Location</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="context">{'search_default_ongoing': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier contrat de location
            </p>
            <p>
                G√©rez les locations de v√©los pour vos clients.
            </p>
        </field>
    </record>

    <!-- Sequence pour les num√©ros de contrats -->
    <record id="seq_rental_order" model="ir.sequence">
        <field name="name">Num√©ro de Contrat de Location</field>
        <field name="code">rental.order</field>
        <field name="prefix">LOC</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
</odoo>