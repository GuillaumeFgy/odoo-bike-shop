<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les contrats de location -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <tree string="Contrats de Location"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='confirmed'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='ongoing'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rental_type"/>
                <field name="total_amount" />
                <field name="state" widget="badge"
                       decoration-info="state=='draft'"
                       decoration-primary="state=='confirmed'"
                       decoration-success="state=='done'"
                       decoration-warning="state=='ongoing'"
                       decoration-muted="state=='cancelled'"/>
                <field name="invoice_status" widget="badge"
                       decoration-warning="invoice_status=='not_invoiced'"
                       decoration-success="invoice_status=='paid'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form pour les contrats de location -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Contrat de Location">
                <header>
                    <button name="action_confirm" type="object"
                            string="Confirmer"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_start_rental" type="object"
                            string="Démarrer Location"
                            class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_end_rental" type="object"
                            string="Terminer Location"
                            class="oe_highlight"
                            invisible="state != 'ongoing'"/>
                    <button name="action_create_invoice" type="object"
                            string="Créer Facture"
                            class="oe_highlight"
                            invisible="state != 'done' or invoice_id"/>
                    <button name="action_cancel" type="object"
                            string="Annuler"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,ongoing,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="client_info" string="Informations Client">
                            <field name="partner_id"/>
                            <field name="partner_phone"/>
                            <field name="partner_email"/>
                        </group>
                        <group name="bike_info" string="Informations Vélo">
                            <field name="bike_id"/>
                            <field name="bike_category"/>
                        </group>
                    </group>
                    <group>
                        <group name="period" string="Période de Location">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="actual_return_date" invisible="state != 'done'"/>
                        </group>
                        <group name="duration" string="Durée">
                            <field name="duration_hours"/>
                            <field name="duration_days"/>
                        </group>
                    </group>
                    <group>
                        <group name="pricing" string="Tarification">
                            <field name="rental_type"/>
                            <field name="unit_price" />
                            <field name="quantity"/>
                            <field name="subtotal" />
                            <field name="deposit_amount" />
                            <field name="total_amount" 
                                   class="oe_subtotal_footer_separator"/>
                        </group>
                        <group name="invoicing" string="Facturation">
                            <field name="invoice_status"/>
                            <field name="invoice_id" invisible="not invoice_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes concernant la location..."/>
                        </page>
                        <page string="Rapport de Dommages" name="damage_report"
                              invisible="state not in ['done', 'cancelled']">
                            <field name="damage_report"
                                   placeholder="Rapport de dommages ou d'incidents..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour les contrats de location -->
    <record id="view_rental_order_kanban" model="ir.ui.view">
        <field name="name">rental.order.kanban</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="total_amount"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-bicycle"/> <field name="bike_id"/>
                                    </div>
                                    <div>
                                        <i class="fa fa-calendar"/> <field name="start_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <strong><field name="total_amount"/> €</strong>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="state" widget="label"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendar pour les contrats de location -->
    <record id="view_rental_order_calendar" model="ir.ui.view">
        <field name="name">rental.order.calendar</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <calendar string="Planning des Locations"
                      date_start="start_date"
                      date_stop="end_date"
                      color="bike_id"
                      mode="month">
                <field name="partner_id"/>
                <field name="bike_id"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Search pour les contrats de location -->
    <record id="view_rental_order_search" model="ir.ui.view">
        <field name="name">rental.order.search</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <search string="Rechercher Locations">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <filter string="Brouillon" name="draft"
                        domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed"
                        domain="[('state', '=', 'confirmed')]"/>
                <filter string="En Cours" name="ongoing"
                        domain="[('state', '=', 'ongoing')]"/>
                <filter string="Terminé" name="done"
                        domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter string="Non Facturé" name="not_invoiced"
                        domain="[('invoice_status', '=', 'not_invoiced')]"/>
                <separator/>
                <filter string="Ce Mois" name="this_month"
                        domain="[('start_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('start_date', '&lt;', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Client" name="group_partner"
                            context="{'group_by': 'partner_id'}"/>
                    <filter string="Vélo" name="group_bike"
                            context="{'group_by': 'bike_id'}"/>
                    <filter string="État" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Type de Location" name="group_rental_type"
                            context="{'group_by': 'rental_type'}"/>
                    <filter string="Date de Début" name="group_start_date"
                            context="{'group_by': 'start_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les contrats de location -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Contrats de Location</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="context">{'search_default_ongoing': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier contrat de location
            </p>
            <p>
                Gérez les locations de vélos pour vos clients.
            </p>
        </field>
    </record>

    <!-- Sequence pour les numéros de contrats -->
    <record id="seq_rental_order" model="ir.sequence">
        <field name="name">Numéro de Contrat de Location</field>
        <field name="code">rental.order</field>
        <field name="prefix">LOC</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
</odoo>
