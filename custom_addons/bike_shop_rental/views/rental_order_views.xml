<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des contrats -->
    <record id="view_rental_order_tree" model="ir.ui.view">
        <field name="name">rental.order.tree</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <list string="Contrats de Location"
                  decoration-info="state=='draft'"
                  decoration-primary="state=='confirmed'"
                  decoration-success="state=='done'"
                  decoration-warning="state=='ongoing'"
                  decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="bike_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="rental_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des contrats -->
    <record id="view_rental_order_form" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <form string="Contrat de Location">
                <header>
                    <button name="action_confirm" type="object" string="Confirmer"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start_rental" type="object" string="Démarrer"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_end_rental" type="object" string="Terminer"
                            class="oe_highlight" invisible="state != 'ongoing'"/>
                    <button name="action_create_invoice" type="object" string="Facturer"
                            class="btn-primary" invisible="state != 'done' or invoice_id"/>
                    <button name="action_cancel" type="object" string="Annuler"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group string="Client">
                            <field name="partner_id"/>
                            <field name="partner_phone"/>
                            <field name="partner_email"/>
                        </group>
                        <group string="Vélo">
                            <field name="bike_id" domain="[('state', '=', 'available')]"/>
                            <field name="bike_category" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Période">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="actual_return_date" readonly="1" invisible="state != 'done'"/>
                        </group>
                        <group string="Tarification">
                            <field name="rental_type" widget="radio"/>
                            <field name="unit_price" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="total_amount" readonly="1" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                    <group string="Facturation" invisible="not invoice_id">
                        <field name="invoice_id" readonly="1"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_rental_order_calendar" model="ir.ui.view">
        <field name="name">rental.order.calendar</field>
        <field name="model">rental.order</field>
        <field name="arch" type="xml">
            <calendar string="Planning" date_start="start_date" date_stop="end_date" color="bike_id">
                <field name="partner_id"/>
                <field name="bike_id"/>
            </calendar>
        </field>
    </record>

    <!-- Action contrats -->
    <record id="action_rental_order" model="ir.actions.act_window">
        <field name="name">Contrats de Location</field>
        <field name="res_model">rental.order</field>
        <field name="view_mode">list,form,calendar</field>
    </record>

    <!-- Séquence numéros de contrat -->
    <record id="seq_rental_order" model="ir.sequence">
        <field name="name">Numéro de Contrat</field>
        <field name="code">rental.order</field>
        <field name="prefix">LOC</field>
        <field name="padding">5</field>
    </record>
</odoo>
