<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour les marques -->
    <record id="view_bike_brand_form" model="ir.ui.view">
        <field name="name">bike.brand.form</field>
        <field name="model">bike.brand</field>
        <field name="arch" type="xml">
            <form string="Marque de Vélo">
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom de la marque..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="country"/>
                            <field name="website" widget="url"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="bike_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description de la marque..."/>
                        </page>
                        <page string="Vélos" invisible="bike_count == 0">
                            <button name="action_view_bikes" type="object" class="oe_stat_button" icon="fa-bicycle">
                                <field name="bike_count" widget="statinfo" string="Vélos"/>
                            </button>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste pour les marques -->
    <record id="view_bike_brand_tree" model="ir.ui.view">
        <field name="name">bike.brand.tree</field>
        <field name="model">bike.brand</field>
        <field name="arch" type="xml">
            <list string="Marques de Vélo">
                <field name="name"/>
                <field name="country"/>
                <field name="bike_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vue recherche pour les marques -->
    <record id="view_bike_brand_search" model="ir.ui.view">
        <field name="name">bike.brand.search</field>
        <field name="model">bike.brand</field>
        <field name="arch" type="xml">
            <search string="Rechercher Marques">
                <field name="name"/>
                <field name="country"/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactif" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action pour les marques -->
    <record id="action_bike_brand" model="ir.actions.act_window">
        <field name="name">Marques de Vélo</field>
        <field name="res_model">bike.brand</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle marque de vélo
            </p>
            <p>
                Gérez les marques de vélos disponibles dans votre catalogue.
            </p>
        </field>
    </record>

</odoo>
