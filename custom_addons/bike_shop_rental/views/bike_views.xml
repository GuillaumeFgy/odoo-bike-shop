<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des vélos -->
    <record id="view_bike_tree" model="ir.ui.view">
        <field name="name">bike.bike.tree</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <list string="Vélos"
                  decoration-success="state=='available'"
                  decoration-warning="state=='maintenance'"
                  decoration-danger="state=='rented'">
                <field name="name"/>
                <field name="category_id"/>
                <field name="model"/>
                <field name="state" widget="badge"/>
                <field name="daily_rate"/>
                <field name="rental_count"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des vélos -->
    <record id="view_bike_form" model="ir.ui.view">
        <field name="name">bike.bike.form</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <form string="Vélo">
                <header>
                    <button name="action_set_available" type="object" string="Disponible"
                            class="oe_highlight" invisible="state == 'available'"/>
                    <button name="action_set_maintenance" type="object" string="Maintenance"
                            invisible="state == 'maintenance'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rentals" type="object" class="oe_stat_button" icon="fa-history">
                            <field name="rental_count" widget="statinfo" string="Locations"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" placeholder="Nom du vélo"/></h1>
                        <field name="category_id" widget="selection" placeholder="Catégorie"/>
                    </div>
                    <notebook>
                        <page string="Informations" name="info">
                            <group>
                                <group string="Caractéristiques">
                                    <field name="model" placeholder="Ex: Trek FX 3"/>
                                    <field name="year"/>
                                    <field name="frame_size"/>
                                    <field name="color"/>
                                    <field name="serial_number"/>
                                </group>
                                <group string="Tarification">
                                    <field name="hourly_rate" widget="monetary"/>
                                    <field name="daily_rate" widget="monetary"/>
                                    <field name="weekly_rate" widget="monetary"/>
                                    <field name="monthly_rate" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" nolabel="1" placeholder="Description détaillée du vélo..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des vélos -->
    <record id="view_bike_kanban" model="ir.ui.view">
        <field name="name">bike.bike.kanban</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="model"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="daily_rate"/>
                <field name="rental_count"/>
                <templates>
                    <t t-name="card">
                        <div class="bike-kanban-card oe_kanban_global_click">
                            <div class="bike-card-header">
                                <span class="bike-category-tag"><field name="category_id"/></span>
                                <span t-attf-class="bike-state-badge state-#{record.state.raw_value}">
                                    <t t-if="record.state.raw_value == 'available'">Disponible</t>
                                    <t t-if="record.state.raw_value == 'rented'">Loué</t>
                                    <t t-if="record.state.raw_value == 'maintenance'">Maintenance</t>
                                </span>
                            </div>
                            <div class="bike-card-body">
                                <h4 class="bike-name"><field name="name"/></h4>
                                <div class="bike-model" t-if="record.model.raw_value">
                                    <i class="fa fa-bicycle me-1"/> <field name="model"/>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div class="bike-price">
                                        <field name="daily_rate"/><small>/jour</small>
                                    </div>
                                    <span class="text-muted small" t-if="record.rental_count.raw_value > 0">
                                        <i class="fa fa-history"/> <field name="rental_count"/> locations
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action vélos -->
    <record id="action_bike" model="ir.actions.act_window">
        <field name="name">Vélos</field>
        <field name="res_model">bike.bike</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Vue Liste des catégories -->
    <record id="view_bike_category_tree" model="ir.ui.view">
        <field name="name">bike.category.tree</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <list string="Catégories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="hourly_rate"/>
                <field name="daily_rate"/>
                <field name="weekly_rate"/>
                <field name="monthly_rate"/>
                <field name="bike_count"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des catégories -->
    <record id="view_bike_category_form" model="ir.ui.view">
        <field name="name">bike.category.form</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                    <group string="Tarification par défaut">
                        <group>
                            <field name="hourly_rate"/>
                            <field name="daily_rate"/>
                        </group>
                        <group>
                            <field name="weekly_rate"/>
                            <field name="monthly_rate"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="bike_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action catégories -->
    <record id="action_bike_category" model="ir.actions.act_window">
        <field name="name">Catégories de Vélos</field>
        <field name="res_model">bike.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
