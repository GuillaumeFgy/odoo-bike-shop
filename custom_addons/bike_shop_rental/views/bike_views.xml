<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste des vélos -->
    <record id="view_bike_tree" model="ir.ui.view">
        <field name="name">bike.bike.tree</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <list string="Vélos"
                  decoration-success="state=='available'"
                  decoration-warning="state=='maintenance'"
                  decoration-danger="state=='rented'">
                <field name="name"/>
                <field name="category_id"/>
                <field name="model"/>
                <field name="state" widget="badge"/>
                <field name="daily_rate"/>
                <field name="rental_count"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des vélos -->
    <record id="view_bike_form" model="ir.ui.view">
        <field name="name">bike.bike.form</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <form string="Vélo">
                <header>
                    <button name="action_set_available" type="object" string="Disponible"
                            class="oe_highlight" invisible="state == 'available'"/>
                    <button name="action_set_maintenance" type="object" string="Maintenance"
                            invisible="state == 'maintenance'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nom du vélo"/></h1>
                    </div>
                    <group>
                        <group string="Informations">
                            <field name="category_id"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="frame_size"/>
                            <field name="color"/>
                            <field name="serial_number"/>
                        </group>
                        <group string="Tarification">
                            <field name="hourly_rate"/>
                            <field name="daily_rate"/>
                            <field name="weekly_rate"/>
                            <field name="monthly_rate"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                    <group string="Statistiques" invisible="rental_count == 0">
                        <field name="rental_count"/>
                        <button name="action_view_rentals" type="object" string="Voir les locations" class="oe_link"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban des vélos -->
    <record id="view_bike_kanban" model="ir.ui.view">
        <field name="name">bike.bike.kanban</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="daily_rate"/>
                <field name="image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <field name="image" widget="image" class="o_image_64_contain"/>
                            <strong><field name="name"/></strong>
                            <div><field name="category_id"/></div>
                            <div><field name="state" widget="badge"/></div>
                            <div><field name="daily_rate"/> €/jour</div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action vélos -->
    <record id="action_bike" model="ir.actions.act_window">
        <field name="name">Vélos</field>
        <field name="res_model">bike.bike</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Vue Liste des catégories -->
    <record id="view_bike_category_tree" model="ir.ui.view">
        <field name="name">bike.category.tree</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <list string="Catégories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="hourly_rate"/>
                <field name="daily_rate"/>
                <field name="weekly_rate"/>
                <field name="monthly_rate"/>
                <field name="bike_count"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire des catégories -->
    <record id="view_bike_category_form" model="ir.ui.view">
        <field name="name">bike.category.form</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                    </group>
                    <group string="Tarification par défaut">
                        <group>
                            <field name="hourly_rate"/>
                            <field name="daily_rate"/>
                        </group>
                        <group>
                            <field name="weekly_rate"/>
                            <field name="monthly_rate"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="bike_count" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action catégories -->
    <record id="action_bike_category" model="ir.actions.act_window">
        <field name="name">Catégories de Vélos</field>
        <field name="res_model">bike.category</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
