<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les vélos -->
    <record id="view_bike_tree" model="ir.ui.view">
        <field name="name">bike.bike.tree</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <tree string="Vélos" decoration-success="state=='available'"
                  decoration-warning="state=='maintenance'"
                  decoration-danger="state=='rented'">
                <field name="name"/>
                <field name="category_id"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="frame_size"/>
                <field name="state" widget="badge"
                       decoration-success="state=='available'"
                       decoration-warning="state=='maintenance'"
                       decoration-danger="state=='rented'"/>
                <field name="daily_rate" />
                <field name="rental_count"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form pour les vélos -->
    <record id="view_bike_form" model="ir.ui.view">
        <field name="name">bike.bike.form</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <form string="Vélo">
                <header>
                    <button name="action_set_available" type="object"
                            string="Marquer Disponible"
                            class="oe_highlight"
                            invisible="state == 'available'"/>
                    <button name="action_set_maintenance" type="object"
                            string="Envoyer en Maintenance"
                            invisible="state == 'maintenance'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="available,rented,maintenance"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du vélo"/>
                        </h1>
                    </div>
                    <group>
                        <group name="info_principale">
                            <field name="category_id"/>
                            <field name="brand"/>
                            <field name="model"/>
                            <field name="year"/>
                            <field name="serial_number"/>
                        </group>
                        <group name="caracteristiques">
                            <field name="frame_size"/>
                            <field name="color"/>
                            <field name="condition"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tarification" name="pricing">
                            <group>
                                <group>
                                    <field name="hourly_rate" />
                                    <field name="daily_rate" />
                                </group>
                                <group>
                                    <field name="weekly_rate" />
                                    <field name="monthly_rate" />
                                </group>
                            </group>
                        </page>
                        <page string="Statistiques" name="stats">
                            <group>
                                <field name="rental_count"/>
                                <field name="total_rental_days"/>
                                <field name="last_rental_date"/>
                            </group>
                            <button name="action_view_rentals" type="object"
                                    string="Voir les Locations"
                                    class="oe_highlight"
                                    invisible="rental_count == 0"/>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description du vélo..."/>
                        </page>
                        <page string="Notes Internes" name="notes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour les vélos -->
    <record id="view_bike_kanban" model="ir.ui.view">
        <field name="name">bike.bike.kanban</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="category_id"/>
                <field name="state"/>
                <field name="daily_rate"/>
                <field name="image"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('bike.bike', 'image', record.id.raw_value)"
                                     alt="Bike" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="category_id"/>
                                </div>
                                <div>
                                    <field name="state" widget="badge"/>
                                </div>
                                <div>
                                    <strong><field name="daily_rate"/> €/jour</strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search pour les vélos -->
    <record id="view_bike_search" model="ir.ui.view">
        <field name="name">bike.bike.search</field>
        <field name="model">bike.bike</field>
        <field name="arch" type="xml">
            <search string="Rechercher Vélos">
                <field name="name"/>
                <field name="category_id"/>
                <field name="brand"/>
                <field name="serial_number"/>
                <filter string="Disponibles" name="available"
                        domain="[('state', '=', 'available')]"/>
                <filter string="Loués" name="rented"
                        domain="[('state', '=', 'rented')]"/>
                <filter string="En Maintenance" name="maintenance"
                        domain="[('state', '=', 'maintenance')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Catégorie" name="group_category"
                            context="{'group_by': 'category_id'}"/>
                    <filter string="État" name="group_state"
                            context="{'group_by': 'state'}"/>
                    <filter string="Marque" name="group_brand"
                            context="{'group_by': 'brand'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les vélos -->
    <record id="action_bike" model="ir.actions.act_window">
        <field name="name">Vélos</field>
        <field name="res_model">bike.bike</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier vélo
            </p>
            <p>
                Ajoutez les vélos disponibles à la location dans votre magasin.
            </p>
        </field>
    </record>

    <!-- Vue Tree pour les catégories -->
    <record id="view_bike_category_tree" model="ir.ui.view">
        <field name="name">bike.category.tree</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <tree string="Catégories de Vélos">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="hourly_rate" />
                <field name="daily_rate" />
                <field name="weekly_rate" />
                <field name="monthly_rate" />
                <field name="bike_count"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form pour les catégories -->
    <record id="view_bike_category_form" model="ir.ui.view">
        <field name="name">bike.category.form</field>
        <field name="model">bike.category</field>
        <field name="arch" type="xml">
            <form string="Catégorie de Vélo">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group string="Tarification par Défaut">
                        <group>
                            <field name="hourly_rate" />
                            <field name="daily_rate" />
                        </group>
                        <group>
                            <field name="weekly_rate" />
                            <field name="monthly_rate" />
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description de la catégorie..."/>
                    </group>
                    <group>
                        <field name="bike_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour les catégories -->
    <record id="action_bike_category" model="ir.actions.act_window">
        <field name="name">Catégories de Vélos</field>
        <field name="res_model">bike.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
