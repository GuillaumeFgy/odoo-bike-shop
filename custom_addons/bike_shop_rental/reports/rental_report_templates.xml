<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template pour le contrat de location -->
    <template id="report_rental_contract">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">
                            <strong>CONTRAT DE LOCATION DE VÉLO</strong>
                        </h2>
                        <h3 class="text-center">
                            <span t-field="doc.name"/>
                        </h3>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Client:</strong>
                                <div t-field="doc.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name", "phone", "email"]}'/>
                            </div>
                            <div class="col-6">
                                <strong>Vélo:</strong>
                                <div>
                                    <span t-field="doc.bike_id.name"/>
                                </div>
                                <div>
                                    Catégorie: <span t-field="doc.bike_category"/>
                                </div>
                            </div>
                        </div>

                        <div class="row mt32 mb32">
                            <div class="col-12">
                                <h4><strong>Période de Location</strong></h4>
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Début:</strong></td>
                                        <td><span t-field="doc.start_date" t-options='{"widget": "datetime"}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Fin:</strong></td>
                                        <td><span t-field="doc.end_date" t-options='{"widget": "datetime"}'/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Durée:</strong></td>
                                        <td><span t-field="doc.duration_days"/> jours</td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt32 mb32">
                            <div class="col-12">
                                <h4><strong>Tarification</strong></h4>
                                <table class="table table-sm table-bordered">
                                    <tr>
                                        <td>Type de location:</td>
                                        <td><span t-field="doc.rental_type"/></td>
                                    </tr>
                                    <tr>
                                        <td>Prix unitaire:</td>
                                        <td><span t-field="doc.unit_price"/> €</td>
                                    </tr>
                                    <tr>
                                        <td>Quantité:</td>
                                        <td><span t-field="doc.quantity"/></td>
                                    </tr>
                                    <tr>
                                        <td><strong>TOTAL:</strong></td>
                                        <td><strong><span t-field="doc.total_amount"/> €</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt64">
                            <div class="col-6">
                                <p>Signature du Client:</p>
                                <p><br/><br/></p>
                                <p>_____________________</p>
                            </div>
                            <div class="col-6">
                                <p>Signature du Responsable:</p>
                                <p><br/><br/></p>
                                <p>_____________________</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
